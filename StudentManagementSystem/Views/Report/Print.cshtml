@model List<EmployeeManagementSystem.Models.Employee>
@{
    Layout = null; // No layout so it prints clean
    var cls = ViewBag.Class as string;
    var date = ViewBag.Date as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Printable Report</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        @@media print {
            .page-break { page-break-before: always; }
        }
        body {
            padding: 30px;
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body onload="window.print()">

    <div class="header">
        <h2>My School Name</h2>
        <h4>Class: @cls &nbsp; | &nbsp; Date: @date</h4>
    </div>

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Roll No.</th>
                <th>Student Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.EmployeeName</td>
                    <td>@student.Designation</td>
                    <td>@student.Age</td>
                    <td>@student.Gender</td>
                    <td>@student.Address</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
