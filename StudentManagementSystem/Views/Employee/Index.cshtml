@using EmployeeManagementSystem.Models;
@model EmployeeResponse;
@{
    Layout = "_Layout"; // ✅ Enable layout so sidebar/menu shows again
    ViewBag.Title = "Employee Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Employee Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
       

        h2 {
            font-weight: 700;
            color: #333;
            margin-bottom: 1.5rem;
            text-align: center;
            padding-top: 1.5rem;
        }

        form {
            background: rgba(255, 255, 255, 0.6);
            backdrop-filter: blur(8px);
            border-radius: 0px;
            padding: 2rem;
            max-width: 100%;
            margin: 0 auto 2rem auto;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            animation: fadeIn 0.6s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-label {
            font-weight: 600;
            color: #444;
        }

        .form-control, select.form-control {
            border-radius: 10px;
            transition: all 0.2s ease-in-out;
        }

            .form-control:focus {
                box-shadow: 0 0 5px rgba(108, 92, 231, 0.3);
                border-color: #6c5ce7;
            }

        .btn-primary {
            background-color: #6c5ce7;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            letter-spacing: 0.5px;
            padding: 0.6rem 2rem;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #5a4bd8;
                transform: translateY(-1px);
            }

        .button-container {
            text-align: center; /* ✅ Centers the button */
            margin-top: 1.5rem;
        }

        .alert {
            border-radius: 10px;
            font-weight: 500;
            max-width: 900px;
            margin: 1rem auto;
        }

        .footer-text {
            text-align: center;
            font-size: 0.9rem;
            color: #666;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Registration</h2>

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success text-center">@ViewBag.Success</div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }
        @if (ViewBag.FileUniqueId != null)
        {
            <div class="alert alert-info d-flex align-items-center justify-content-between">
                <div>
                    File Unique Id:
                    <strong id="fileUniqueIdText">@ViewBag.FileUniqueId</strong>
                </div>

                <button type="button"
                        class="btn btn-sm btn-outline-secondary ms-2"
                        onclick="copyFileUniqueId()">
                    📋 Copy
                </button>
            </div>
        }


        <form asp-action="Index" enctype="multipart/form-data" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="employeeName" class="form-label">Col No.</label>
                    <input asp-for="employeeName" class="form-control" placeholder="Enter Col No" />
                    <span asp-validation-for="employeeName" class="text-danger"></span>
                </div>

               @*  <div class="col-md-6 mb-3">
                    <label asp-for="department" class="form-label">Department</label>
                    <select asp-for="department" class="form-control" asp-items="@(new SelectList(ViewBag.Departments))">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="department" class="text-danger"></span>
                </div> *@
                <div class="col-md-6 mb-3">
                    <label asp-for="department" class="form-label">File No.</label>
                    <input asp-for="department" class="form-control" placeholder="Enter File No." />
                    <span asp-validation-for="department" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="designation" class="form-label">Part No.</label>
                    <input asp-for="designation" class="form-control" placeholder="Enter Part No." />
                    <span asp-validation-for="designation" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="subject" class="form-label">Subject</label>
                    <input asp-for="subject" class="form-control" placeholder="Enter subject" />
                    <span asp-validation-for="subject" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    @* <label asp-for="gender" class="form-label">Year</label>
                    <select asp-for="gender" class="form-control">
                        <option value="">-- Select Gender --</option>
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                    <span asp-validation-for="gender" class="text-danger"></span> *@
                    <label asp-for="address" class="form-label">From Year</label>
                    <input asp-for="address" class="form-control" placeholder="Enter From Year" />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ToYear" class="form-label">To Year</label>
                    <input asp-for="ToYear" class="form-control" placeholder="Enter To Year" />
                    <span asp-validation-for="ToYear" class="text-danger"></span>
                </div>
            </div>

           @*  <div class="mb-3">
                <label class="form-label">Upload Documents (Multiple allowed)</label>
                <input type="file" name="documents" class="form-control" multiple />
            </div> *@

            <div class="button-container">
                <button type="submit" class="btn btn-primary">Save Employee</button>
            </div>
        </form>

        <div class="footer-text">
            © @DateTime.Now.Year Employee Management System
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyFileUniqueId() {
            const text = document.getElementById("fileUniqueIdText").innerText;

            navigator.clipboard.writeText(text).then(() => {
                const btn = event.target;
                const original = btn.innerText;

                btn.innerText = "✅ Copied";
                setTimeout(() => btn.innerText = original, 1500);
            });
        }

    </script>
</body>
</html>
