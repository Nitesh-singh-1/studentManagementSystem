@model StudentManagementSystem.Models.Student
@{
    ViewData["Title"] = "Student Registration";
}

<h2>Student Registration</h2>
@if (!ViewData.ModelState.IsValid)
{
    foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="alert alert-danger">@error.ErrorMessage</div>
    }
}

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

<form asp-action="Index" method="post">
    <div class="container align-items-center" style="width:70%">
    <div class="form-group">
        <label>Class</label>
        <select asp-for="Class" class="form-control">
            <option value="">-- Select Class --</option>
            @foreach (var cls in ViewBag.Classes)
            {
                <option value="@cls">@cls</option>
            }
        </select>
        <span asp-validation-for="Class" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Roll Number</label>
        <input asp-for="RollNumber" class="form-control" />
        <span asp-validation-for="RollNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Student Name</label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Age</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Gender</label><br />
        <input type="radio" asp-for="Gender" value="Male" /> Male
        <input type="radio" asp-for="Gender" value="Female" /> Female
        <input type="radio" asp-for="Gender" value="Other" /> Other
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Address</label>
        <textarea asp-for="Address" class="form-control"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
        <div class="form-group align-items-center">
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
