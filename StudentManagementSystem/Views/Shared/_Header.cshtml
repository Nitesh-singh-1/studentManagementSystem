<header class="ems-header shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light bg-white py-3 px-4">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <!-- Left Section: Offcanvas toggle -->
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-primary me-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#appSidebar" aria-controls="appSidebar">
                    <i class="fa-solid fa-bars"></i>
                </button>

                <a class="navbar-brand fw-bold text-primary" asp-controller="Employee" asp-action="Index">
                    <i class="bi bi-people-fill me-2"></i>Employee Management System
                </a>
            </div>

            <!-- Right Section: User Info -->
            <div class="d-flex align-items-center">
                <span class="me-3 fw-semibold text-secondary">
                    <i class="bi bi-person-circle me-1"></i>@Context.Session.GetString("UserRole")
                    @if (ViewBag.Role != null)
                    {
                        <span class="badge bg-primary ms-1">@ViewBag.Role</span>
                    }
                </span>
                <a href="/Login/Logout" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                </a>
            </div>
        </div>
    </nav>
</header>

<!-- ================== OFFCANVAS SIDEBAR ================== -->
<div class="offcanvas offcanvas-start offcanvas-width" tabindex="-1" id="appSidebar" aria-labelledby="appSidebarLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title fw-bold text-primary" id="appSidebarLabel">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <div class="offcanvas-body d-flex flex-column">
        <ul class="nav nav-pills flex-column gap-1">

            <!-- 👷 Operator Menu -->
            @if (Context.Session.GetString("UserRole") == "Operator")
            {
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Title == "Employee Registration" ? "active" : "")"
                       asp-controller="Employee" asp-action="Index">
                        <i class="fa-solid fa-users-gear me-2"></i> Manage Employees
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Title == "Employee Report" ? "active" : "")"
                       asp-controller="Report" asp-action="Index">
                        <i class="fa-solid fa-file-lines me-2"></i> Employee Report
                    </a>
                </li>
            }

            <!-- 👨‍💼 Supervisor Menu -->
            @if (Context.Session.GetString("UserRole") == "Supervisor")
            {
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Title == "Supervisor Dashboard" ? "active" : "")"
                       asp-controller="Supervisor" asp-action="Dashboard">
                        <i class="fa-solid fa-gauge-high me-2"></i> Supervisor Dashboard
                    </a>
                </li>
            }
        </ul>

        <div class="mt-auto pt-3 border-top">
            <small>Logged in as:
                <strong>@Context.Session.GetString("UserRole")</strong>
            </small>
        </div>
    </div>
</div>
