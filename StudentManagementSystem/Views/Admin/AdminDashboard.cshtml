@{
    ViewData["Title"] = "Admin Dashboard";
    var username = ViewBag.Username ?? "Admin";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Welcome, @username 👋</h2>

    <div class="row g-3" style="justify-content: space-around;">
        <!-- Card 1 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Users</h5>
                    <p class="card-text">Manage all Users under your control.</p>
                    <a href="@Url.Action("Supervisors", "Admin")" class="btn btn-outline-primary">View Supervisors</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-info">Manage Entries</h5>
                    <p class="card-text">Manage Entries</p>
                    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-info">Manage Entries</a>
                </div>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-info">Reports</h5>
                    <p class="card-text">Generate employee reports.</p>
                    <a href="@Url.Action("AdminIndex", "Report")" class="btn btn-outline-info">Generate Reports</a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        @* <a href="@Url.Action("Logout", "Login")" class="btn btn-danger">Logout</a> *@
    </div>
</div>
