@model EmployeeManagementSystem.Models.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "SJDA Internal Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Siliguri–Jalpaiguri Development Authority</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          referrerpolicy="no-referrer" />

    <style>
        body {
            /* background: linear-gradient(135deg, #0d6efd, #0b5ed7); */
            min-height: 100vh;
        }

        .login-card {
            background-color: #ffffff;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
            padding: 2.5rem;
            width: 100%;
            max-width: 420px;
            animation: fadeIn 0.6s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-15px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .authority-title {
            text-align: center;
            font-weight: 700;
            font-size: 1.2rem;
            color: #0d6efd;
            margin-bottom: 0.25rem;
        }

        .portal-subtitle {
            text-align: center;
            font-size: 0.95rem;
            color: #555;
            margin-bottom: 1.8rem;
        }

        .form-control {
            border-radius: 10px;
        }

        .btn-primary {
            border-radius: 10px;
            font-weight: 600;
        }

        .captcha-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .captcha-container img {
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        .footer-text {
            text-align: center;
            font-size: 0.8rem;
            color: #666;
            margin-top: 1.5rem;
        }
    </style>
</head>

<body>
    <div class="d-flex align-items-center justify-content-center min-vh-100">
        <div class="login-card">

            <div class="authority-title">
                Siliguri–Jalpaiguri Development Authority
            </div>
            <div class="portal-subtitle">
                Internal Document Management System
            </div>

            <form asp-action="Index" method="post">

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input asp-for="Username"
                           class="form-control"
                           placeholder="Enter official username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <input asp-for="Password"
                               type="password"
                               class="form-control"
                               id="passwordInput"
                               placeholder="Enter password" />
                        <span class="input-group-text"
                              style="cursor:pointer"
                              onclick="togglePassword()">
                            <i id="toggleIcon" class="fa-regular fa-eye"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Security Verification (CAPTCHA)</label>
                    <div class="captcha-container mb-2">
                        <img id="captchaImage"
                             src="/Login/CaptchaImage"
                             alt="Captcha"
                             height="40" />
                        <button type="button"
                                class="btn btn-outline-secondary btn-sm"
                                onclick="refreshCaptcha()">⟳</button>
                    </div>
                    <input asp-for="CaptchaCode"
                           class="form-control"
                           placeholder="Enter CAPTCHA text" />
                    <span asp-validation-for="CaptchaCode" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-3">
                    Sign In
                </button>
            </form>

            <div class="footer-text">
                © @DateTime.Now.Year Siliguri–Jalpaiguri Development Authority<br />
                Authorized personnel only
            </div>
        </div>
    </div>

    <script>
        function refreshCaptcha() {
            fetch('/Login/RefreshCaptcha')
                .then(() => {
                    document.getElementById('captchaImage').src =
                        '/Login/CaptchaImage?' + new Date().getTime();
                    document.querySelector('[name="CaptchaCode"]').value = '';
                });
        }

        function togglePassword() {
            const input = document.getElementById("passwordInput");
            const icon = document.getElementById("toggleIcon");

            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
